<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecargarTarjeta">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#000B7F"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:background="@drawable/atrás" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="290dp"
                android:background="@drawable/minilogometro" />

        </LinearLayout>

    </ScrollView>







    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000B7F"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="672dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:background="@drawable/home"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/historial" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/recargar" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/historial" />


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Recargar tarjeta"
        android:textAlignment="center"
        android:textColor="#000B7F"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView4" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="A continuación, completa los datos solicitados"
        android:textColor="#000B7F"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="selecciona la tarjeta"
        android:textColor="#000B7F"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="202dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="227dp"
        android:layout_height="39dp"
        android:spinnerMode="dropdown"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="233dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto a recargar"
        android:textColor="#000B7F"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="308dp" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="227dp"
        android:layout_height="37dp"
        android:background="@drawable/entradas_texto"
        android:ems="10"
        android:hint="S/. 0.00"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="335dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona un medio de pago:"
        android:textColor="#000B7F"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="409dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:background="@drawable/boton"
        android:text="Pagar"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="526dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="440dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/yape" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/Plin"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/visa2"/>

        <ImageView
        android:layout_width="50dp"
        android:layout_height="45dp"
            android:layout_marginRight="15dp"
        android:background="@drawable/mastercard"/>

        <ImageView
        android:layout_width="50dp"
        android:layout_height="45dp"
            android:layout_marginRight="15dp"
        android:background="@drawable/americanexpress"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/dinersclub"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>