<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecargarTarjeta">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#000B7F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:background="@drawable/atras1" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="290dp"
                android:background="@drawable/minilogometro" />

        </LinearLayout>

    </ScrollView>


    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#000B7F"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="671dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/home"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/historial"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/recargar"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/notificaciones2"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Recargar tarjeta"
        android:textAlignment="center"
        android:textColor="#000B7F"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView4" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="A continuaciÃ³n, completa los datos solicitados"
        android:textColor="#000B7F"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="187dp"
        android:text="selecciona la tarjeta"
        android:textColor="#000B7F"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:ignore="TextSizeCheck" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="227dp"
        android:layout_height="39dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="92dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="203dp"
        android:text="Monto a recargar"
        android:textColor="#000B7F"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="227dp"
        android:layout_height="37dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="89dp"
        android:background="@drawable/entradas_texto"
        android:ems="10"
        android:hint="S/. 0.00"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="116dp"
        android:text="Selecciona un medio de pago:"
        android:textColor="#000B7F"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="123dp"
        android:background="@drawable/boton"
        android:text="Pagar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/yape" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/Plin"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/visa2" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/mastercard" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/americanexpress" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/dinersclub" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>