<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevaTarjeta">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#000B7F"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:background="@drawable/atrás" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="290dp"
                android:background="@drawable/minilogometro" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Registrar nueva tarjeta"
        android:textAlignment="center"
        android:textColor="#000B7F"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tu nro de tarjeta"
        android:textColor="#000B7F"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="308dp" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="227dp"
        android:layout_height="37dp"
        android:background="@drawable/entradas_texto"
        android:ems="10"
        android:hint="111111111111"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="335dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:background="@drawable/boton"
        android:text="Registrar tarjeta"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="484dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000B7F"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="672dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:background="@drawable/home"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/historial" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/recargar" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/historial" />


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="A continuación, completa los datos solicitados"
        android:textColor="#000B7F"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de tarjeta"
        android:textColor="#000B7F"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="202dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="227dp"
        android:layout_height="39dp"
        android:spinnerMode="dropdown"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="233dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="226dp"
        android:layout_height="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/captcha"
        tools:layout_editor_absoluteY="397dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="28dp"
        android:layout_height="28dp"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="400dp" />

</androidx.constraintlayout.widget.ConstraintLayout>