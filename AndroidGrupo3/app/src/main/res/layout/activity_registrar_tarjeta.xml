<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarTarjeta"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="310dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#000B7F">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/atras1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/logometroblanco"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar nueva tarjeta"
            android:textSize="23sp"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:textColor="#000B7F"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A continuación, completa los datos solicitados:"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#000B7F"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de tarjeta"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:textColor="#000B7F"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/entradas_texto"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="Ingrese tu número de tarjeta"
            android:textSize="16sp"
            android:layout_marginTop="9dp"
            android:textColor="#000B7F"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/duda"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:hint="147245758124"
            android:textSize="16dp"
            android:background="@drawable/entradas_texto"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="110dp"
                android:background="@drawable/boton"
                android:text="Registrar tarjeta"
                android:textColor="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#000B7F">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_menu_inicial"
            android:drawableTop="@drawable/casita"
            android:paddingTop="15dp"
            android:text="Inicio"
            android:textSize="13sp"
            android:textColor="@color/white" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_menu_inicial"
            android:drawableTop="@drawable/tarjeta"
            android:paddingTop="10dp"
            android:text="Historial"
            android:textSize="13sp"
            android:textColor="@color/white"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_menu_inicial"
            android:drawableTop="@drawable/moneda"
            android:paddingTop="15dp"
            android:text="Recargar"
            android:textSize="13sp"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_menu_inicial"
            android:drawableTop="@drawable/campana"
            android:paddingTop="10dp"
            android:textSize="13sp"
            android:text="Notificacion"
            android:textColor="@color/white"/>


    </LinearLayout>

</LinearLayout>