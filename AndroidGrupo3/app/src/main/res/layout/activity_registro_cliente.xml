<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroCliente"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#000B7F"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnVolver"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:background="@drawable/atras1"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="290dp"
                android:background="@drawable/minilogometro"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

    </ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Te damos la Bienvenida al metropolitano"
        android:textColor="#000B7F"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:orientation="vertical">

    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo electrónico"
            tools:ignore="MissingConstraints,TextSizeCheck"
            android:textColor="#000B7F"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>

        <EditText
            android:id="@+id/regCorreo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/entradas_texto"
            android:ems="10"
            android:hint="Correo electrónico"
            android:inputType="text"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textColor="#000B7F"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingTop="6dp"/>
        <EditText
            android:id="@+id/regContra"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/entradas_texto"
            android:ems="10"
            android:hint="Crea una contraseña"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de tarjeta"
            android:textColor="#000B7F"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingTop="6dp"/>

        <Spinner
            android:id="@+id/regTipo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/entradas_texto"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:spinnerMode="dropdown"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa tu número de tarjeta"
            android:textColor="#000B7F"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingTop="6dp"/>
        <EditText
            android:id="@+id/regNumeroTarjeta"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/entradas_texto"
            android:ems="10"
            android:hint="111111111111"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="#000B7F"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingTop="6dp"/>

        <EditText
            android:id="@+id/regNombre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/entradas_texto"
            android:ems="10"
            android:hint="Escribe tu(s) nombre(s)"
            android:inputType="text"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido"
            android:textColor="#000B7F"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingTop="6dp"/>

        <EditText
            android:id="@+id/regApellido"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/entradas_texto"
            android:ems="10"
            android:hint="Escribe tu(s) apellido(s)"
            android:inputType="text"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/boton"
            android:text="Registrarse"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="110dp"/>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000B7F"
        android:gravity="center">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Al continuar aceptas las condiciones del servicio y reconoces que leiste nuestra politica de privacidad. Aviso de recopilacion de informacion"
            android:textSize="13sp"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>