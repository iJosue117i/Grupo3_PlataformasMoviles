<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pago">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#000B7F">

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/atras1" />

        <Button
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_marginLeft="290dp"
            android:background="@drawable/minilogometro"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="612dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/metrofondo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="¡Su recarga ha sido procesado con éxito!"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="#000B7F"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/home"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/historial"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/recargar"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/notificaciones2"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>

</LinearLayout>